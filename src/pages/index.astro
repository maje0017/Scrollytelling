---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
import Section from '../components/Section.astro';
import Link from '../components/Link.astro';
import { Image } from 'astro:assets';
import thumbsup from "../assets/images/thumbsup.png";
import heroImage from "../assets/images/hero unit.png"; // Eksempel
import eraImage from "../assets/images/nagy-arnold-BL2T9a_9Rn8-unsplash.jpg"; // Eksempel
import declineImage from "../assets/images/immo-wegmann--fJ8Rbnj8Mo-unsplash.jpg"; // Eksempel
import revivalImage from "../assets/images/hongwei-fan-A44uDEvjrHA-unsplash.jpg"; // Eksempel
import img1 from "../assets/images/sort1.png"; // Eksempel
import img2 from "../assets/images/sort2.png"; // Eksempel
import img3 from "../assets/images/sort3.png"; // Eksempel
import img4 from "../assets/images/sort4.png"; // Eksempel
import img5 from "../assets/images/grynet1.png"; // Eksempel
import img6 from "../assets/images/grynet2.png"; // Eksempel
import img7 from "../assets/images/grynet3.png"; // Eksempel
import img8 from "../assets/images/grynet4.png"; // Eksempel

--- 

     

<MainLayout>
  <html lang="da">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>110-filmens Historie</title>
    <!-- Tilføj Inter font fra Google -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;900&display=swap">
  </head>
  <body class="font-sans text-gray-900 bg-gray-100">
    <main>
      <!-- Hero-sektion -->
       <Section class="relative h-screen w-full">
        <!-- Hero-baggrund -->
        <div 
          class="absolute inset-0 h-full w-full bg-cover bg-center"
        >
          <img src={heroImage.src} alt="Hero Image" />
        </div>

        <!-- Tekst og indhold -->
        <div class="relative z-10 flex flex-col items-center justify-center h-full text-white text-center px-6">
          <h1 class="text-6xl md:text-8xl font-extrabold tracking-tight leading-tight animate-fadeIn">
            110-filmens Historie
          </h1>
          <p class="text-xl md:text-2xl mt-4 max-w-2xl font-light animate-fadeIn">
            En rejse gennem filmens evolution
          </p>
        </div>
      </Section>

         <!-- Øvrige sektioner (Galleri) -->
      <section class="py-12 bg-white mt-0">
        <h2 class="text-4xl text-center font-bold mb-8">110-filmens Historie</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 px-6">
          <!-- Galleri Item 1: Storhedstiden -->
          <div class="space-y-4">
            <img src={eraImage.src} alt="Storhedstiden (1970'erne)" class="w-full h-64 object-cover rounded-lg shadow-lg">
            <h3 class="text-xl font-semibold text-center">Storhedstiden (1970'erne)</h3>
            <p class="text-lg text-center">110-film blev populært i 1970'erne på grund af dets bekvemmelighed og de små, lommevenlige kameraer.</p>
          </div>

          <!-- Galleri Item 2: Faldet -->
          <div class="space-y-4">
            <img src={declineImage.src} alt="Faldet (1980'erne)" class="w-full h-64 object-cover rounded-lg shadow-lg">
            <h3 class="text-xl font-semibold text-center">Faldet (1980'erne)</h3>
            <p class="text-lg text-center">I 1980'erne begyndte 35mm-kameraer at blive mere kompakte, og 110-film blev opfattet som et ringere format.</p>
          </div>

          <!-- Galleri Item 3: Eftervirkninger -->
          <div class="space-y-4">
            <img src={revivalImage.src} alt="Eftervirkninger (1990'erne og frem)" class="w-full h-64 object-cover rounded-lg shadow-lg">
            <h3 class="text-xl font-semibold text-center">Eftervirkninger (1990'erne og frem)</h3>
            <p class="text-lg text-center">Selvom 110-film mistede sin popularitet, er det stadig et nicheformat for entusiaster, og Lomography har holdt det i live.</p>
          </div>
        </div>
      </section>

 <section class="py-12 bg-white">
  <h2 class="text-4xl text-center font-bold mb-8">110-filmens Historie Galleri</h2>

  <!-- Container til at placere gallerierne ved siden af hinanden -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 px-6">
    
    <!-- Galleri 1 -->
    <div>
      <h3 class="text-2xl font-bold text-center mb-4">Sort-Hvid Billeder</h3>
      <div class="grid grid-cols-2 gap-4">
        <img src={img1.src} alt="Sort 1" class="w-full h-64 object-cover rounded-lg shadow-lg">
        <img src={img2.src} alt="Sort 2" class="w-full h-64 object-cover rounded-lg shadow-lg">
        <img src={img3.src} alt="Sort 3" class="w-full h-64 object-cover rounded-lg shadow-lg">
        <img src={img4.src} alt="Sort 4" class="w-full h-64 object-cover rounded-lg shadow-lg">
      </div>
    </div>

    <!-- Galleri 2 -->
    <div>
      <h3 class="text-2xl font-bold text-center mb-4">Grynet Billeder</h3>
      <div class="grid grid-cols-2 gap-4">
        <img src={img5.src} alt="Grynet 1" class="w-full h-64 object-cover rounded-lg shadow-lg">
        <img src={img6.src} alt="Grynet 2" class="w-full h-64 object-cover rounded-lg shadow-lg">
        <img src={img7.src} alt="Grynet 3" class="w-full h-64 object-cover rounded-lg shadow-lg">
        <img src={img8.src} alt="Grynet 4" class="w-full h-64 object-cover rounded-lg shadow-lg">
      </div>
    </div>

  </div>
</section>






    </main>
  </body>
  </html>
</MainLayout>

<style>
	.fadein
	{
		animation: fadeIn 1s ease-in-out;
	}
</style>
